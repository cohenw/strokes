<UserControl x:Class="Strokes.GUI.AchievementTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Strokes.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:BoolToImageUriConverter x:Key="ImageConverter"/>
    </UserControl.Resources>
    <Grid Margin="10" Background="#FF585858" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Height="40" Grid.Column="0"  Margin="5,5,5,5" Name="image1"  Width="40" Source="{Binding IsCompleted, Converter={StaticResource ImageConverter}}" />
        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10,5,5,5">
            <TextBlock Text="{Binding Name}"  Name="achievement_title"  FontWeight="Bold" Foreground="GreenYellow" />
            <TextBlock Name="achievement_description" Text="{Binding Description}" TextWrapping="Wrap" Foreground="#FFCBCBCB"  />
        </StackPanel>
    </Grid>
</UserControl>
