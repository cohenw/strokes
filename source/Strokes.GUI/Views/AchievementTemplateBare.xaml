<UserControl x:Class="Strokes.GUI.AchievementTemplateBare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Strokes.GUI;component/Resources/Styles/Generic.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"
                              MinWidth="89" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                Width="65"
                Height="65"
                Margin="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="1">
            <Image Width="64"
                   Height="64"
                   Margin="0"
                   Source="{Binding ImageUri}" HorizontalAlignment="Left" />
        </Border>
        <StackPanel Grid.Column="1"
                    Margin="10,5,5,5"
                    Orientation="Vertical">
            <TextBlock
                       Foreground="{DynamicResource AchivementHeaderForeground}"
                       Text="{Binding Name,
                                      FallbackValue=ChallengeName,
                                      Mode=OneWay}"
                       TextWrapping="Wrap" FontWeight="Bold" />
            <TextBlock Foreground="{DynamicResource AchivementForeground}"
                       Text="{Binding Description,
                                      FallbackValue=Description,
                                      Mode=OneWay}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
