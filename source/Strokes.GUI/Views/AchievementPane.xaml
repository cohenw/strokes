<UserControl x:Class="Strokes.GUI.AchievementPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:Strokes.GUI"
             d:DataContext="{d:DesignData Source=/SampleData/AllAchievementsViewModelSampleData.xaml}"
             d:DesignHeight="800"
             d:DesignWidth="1024"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <viewmodels:AllAchievementsViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Strokes.GUI;component/Resources/Styles/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#FF262626">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  Upperframe with global achievement results  -->
        <StackPanel Grid.Row="0"
                    Margin="{DynamicResource ArchivementControlMargin}">
            <Border Background="{DynamicResource ArchivementLightBackground}"
                    BorderBrush="{DynamicResource AchivementBorder}"
                    BorderThickness="2">
                <StackPanel Orientation="Vertical">
                    <!--  Total completed achievements overview+progressbar  -->
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="15"
                                   Foreground="{DynamicResource AchivementForeground}">
                            <TextBlock.Inlines>
                                <Run Text="Total achievements earned:" />
                                <Run Text="{Binding TotalCompleted, Mode=OneWay}" />
                                <Run Text="of" />
                                <Run Text="{Binding TotalAchievements, Mode=OneWay}" />
                                <Run Text="(" />
                                <Run Text="{Binding PercentageCompleted, Mode=OneWay}" />
                                <Run Text="%)" />
                            </TextBlock.Inlines>
                        </TextBlock>
                        <ProgressBar Height="20"
                                     Margin="10,0,10,10"
                                     Background="#FF383635"
                                     BorderBrush="#FF706D69"
                                     Foreground="White"
                                     Maximum="{Binding TotalAchievements}"
                                     Style="{DynamicResource AchivementProgressBarStyle}"
                                     Value="{Binding TotalCompleted, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
        <TabControl Grid.Row="1"
                    Margin="{DynamicResource ArchivementControlMargin}"
                    Background="{DynamicResource AchivementItemSelectedBackground}"
                    BorderBrush="{DynamicResource AchivementBorder}"
                    BorderThickness="2"
                    Padding="0"
                    Style="{DynamicResource AchivementTabControlStyle}">
            <TabItem Header="MY ACHIVEMENTS"
                     Style="{DynamicResource AchivementTabItemStyle}">
                <TabItem.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#FFF3F3F3" />
                        <GradientStop Offset="0.5" Color="#FFEBEBEB" />
                        <GradientStop Offset="0.5" Color="#FFDDDDDD" />
                        <GradientStop Offset="1" Color="#FFCDCDCD" />
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="{DynamicResource ArchivementLightBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!--  Achievement categories listbox  -->
                    <StackPanel Grid.Column="0">
                        <ListBox x:Name="AchivementsCategoryListBox"
                                 Width="210"
                                 Margin="{DynamicResource ArchivementControlMargin}"
                                 BorderThickness="0"
                                 ItemsSource="{Binding AchievementsOrdered}"
                                 ItemTemplate="{DynamicResource CategoryTemplate}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 SelectedIndex="0"
                                 Template="{DynamicResource AchivementListBoxControlTemplate}" />
                    </StackPanel>
                    <!--  Achievements listbox of selected category  -->
                    <ScrollViewer Grid.Column="1"
                                  HorizontalScrollBarVisibility="Hidden"
                                  Template="{DynamicResource AchivementScrollViewerControlTemplate}"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl Margin="0"
                                      Background="{x:Null}"
                                      BorderBrush="{x:Null}"
                                      Foreground="{DynamicResource AchivementForeground}"
                                      VirtualizingStackPanel.IsVirtualizing="True" 
                                      VirtualizingStackPanel.VirtualizationMode="Standard"
                                      ItemsSource="{Binding SelectedItem,
                                                            ElementName=AchivementsCategoryListBox}"
                                      ItemTemplate="{DynamicResource AchievementTemplate}"
                                      Padding="{DynamicResource ArchivementsListBoxMargin}" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="LEADERBOARD"
                     Style="{DynamicResource AchivementTabItemStyle}">
                <Grid Background="{DynamicResource AchivementBackground}">
                    <!--  Rightframe with results of other 'players'  -->
                    <StackPanel Margin="10,10,10,10">
                        <TextBlock Text="Information about what achievements other people you know have been completing."
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="SETTINGS"
                     Style="{DynamicResource AchivementTabItemStyle}">
                <Grid Background="{DynamicResource AchivementBackground}">
                    <!--  Settings  -->
                    <StackPanel Margin="10,10,10,10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <Button Height="34"
                                Margin="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="{x:Null}"
                                BorderBrush="{DynamicResource AchivementBorder}"
                                Command="{Binding ResetCommand}"
                                Content="RESET ACHIVEMENT PROGRESS"
                                Foreground="{DynamicResource AchivementForeground}"
                                Style="{DynamicResource AchivementButtonStyle}" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
